# Example environment variables for Damascus Master
# Copy this to .env and fill values before running in production

# Server port
PORT=3025

# JWT secret (DO NOT use a trivial value in production)
JWT_SECRET=your_jwt_secret_here

# Admin credentials (optional - prefer creating admin via admin UI)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=supersecretpassword

# Email SMTP credentials - used to send verification and notification emails
EMAIL_USER=youremail@example.com
EMAIL_PASS=your_email_password_or_app_password

# PayPal credentials (if using PayPal integration)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_ENV=sandbox
PAYPAL_WEBHOOK_ID=

# Optional dev/test flags
ALLOW_DEV_LOGIN=false
DEV_AUTH_KEY=dev-key

# Redis URL (if you choose to enable Redis-backed rate limiting)
REDIS_URL=redis://localhost:6379

NODE_ENV=development
